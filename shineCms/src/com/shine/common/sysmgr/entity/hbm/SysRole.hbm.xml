<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">    
<hibernate-mapping>
	<class name="com.shine.common.sysmgr.entity.SysRole" table="SYS_ROLE" 
		dynamic-insert="false" dynamic-update="true">
		<id name="roleId" column="ROLEID" type="java.lang.Integer" length="8">
			<generator class="native" />
		</id>
		<property name="name" column="NAME" type="java.lang.String" length="50" not-null="true"/>
		<property name="remark" column="REMARK" type="java.lang.String" length="100" not-null="false"/>
		
		<property name="delflag" type="java.lang.Integer" not-null="false" insert="false" update="false">
			<column name="DELFLAG" sql-type="int(1)" />
		</property>
		<property name="deltime" column="DELTIME" type="java.util.Date" not-null="false" insert="false" update="false"/>
		
		<set name="menus" table="SYS_ROLE_MENU" cascade="none" inverse="false" lazy="true">
			<key column="ROLEID" />
			<many-to-many column="MENUID" class="com.shine.common.sysmgr.entity.SysMenu" fetch="join" />
		</set>
		
		<set name="funs" table="SYS_ROLE_FUNCTION" cascade="none" inverse="false" lazy="true">
			<key column="ROLEID" />
			<many-to-many column="FUNID" class="com.shine.common.sysmgr.entity.SysFunction" fetch="join" />
		</set>
    </class>
</hibernate-mapping>